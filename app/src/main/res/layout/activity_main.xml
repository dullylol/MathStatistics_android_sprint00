<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_tv"
            android:layout_gravity="center"
            android:textSize="26sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/task1_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task1_btn" />

        <Button
            android:id="@+id/task2_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task2_btn" />

        <Button
            android:id="@+id/task3_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task3_btn" />

        <Button
            android:id="@+id/task4_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task4_btn" />

        <Button
            android:id="@+id/task5_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task5_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/add_sample_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@android:drawable/ic_input_add" />

            <Button
                android:id="@+id/remove_sample_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@android:drawable/ic_delete" />

            <Button
                android:id="@+id/default_samples_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/set_default" />

            <Button
                android:id="@+id/clean_samples_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/clean_btn" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/samples_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>